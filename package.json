{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "_moduleAliases": {
    "@": "src"
  },
  "scripts": {
    "dev": "vite",
    "start": "tsc && vite build && node server.mjs",
    "build": "tsc && vite build",
    "lint": "eslint \"./src/**/*.{ts,tsx,json}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx,json}\"",
    "stylelint": "stylelint './src/**/*.{css,scss}' './static/**/*.{css,scss}'",
    "stylelint:fix": "stylelint './src/**/*.{css,scss}' './static/**/*.{css,scss}' --fix",
    "format": "prettier --write .",
    "fix": "npm run stylelint:fix && npm run lint:fix && npm run format",
    "preview": "vite preview",
    "clean": "rm -rf node_modules/.vite",
    "reinstall": "rm -rf node_modules && npm install",
    "dev:restart": "npm run clean && npm run reinstall && npm run dev",
    "test": "mocha --require ts-node/register --require module-alias/register",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/chai": "^5.0.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.2",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.19.2",
    "globals": "^15.4.0",
    "handlebars": "^4.7.8",
    "husky": "7.0.3",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "mocha": "^11.1.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.3.2",
    "sass": "^1.71.1",
    "sinon": "^19.0.2",
    "stylelint": "^16.8.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "eslint": "^9.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && npm run stylelint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run test",
      "npm run lint",
      "npm run stylelint"
    ]
  }
}
