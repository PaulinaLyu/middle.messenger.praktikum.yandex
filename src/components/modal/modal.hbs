 <div class="modal {{#if modalClassName}}{{modalClassName}}{{/if}}">
    <div class="modal__content">
      <h3 class="modal__content__title{{#if titleClassName}} {{titleClassName}}{{/if}}">{{title}}</h2>
      {{> InputFile isMultiple='false' id="avatar" name="avatar" accept="image/png, image/jpeg, image/jpg"}}
      <div class="modal__footer">
        {{#> Button }}
            <span>{{btnText}}</span>
        {{/ Button }}
      </div>

    </div>
  </div>