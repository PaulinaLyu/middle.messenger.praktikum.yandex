<div class="chat-item">
    <div class="chat-item__container{{#if current}} chat-item__container--current{{/if}}">
        <div class="chat-item__main">
            {{#if avatar}}
                <div class="chat-item__avatar">
                    <img class="chat-item__avatar" alt="avatar" src={{ avatar }}><img>
                </div>
            {{else }}
                <div class="chat-item__avatar"></div>
            {{/if}}
            <div>
                <div class="chat-item__name"><span class="chat-item__name-text">{{ name }}</span></div>
                <div class="chat-item__message"><span class="chat-item__message-text">{{ message }}</span></div>
            </div>
        </div>
    
        <div class="chat-item__info">
            <div class="chat-item__date">{{ date }}</div>
            {{#if unread}} <div class="chat-item__unread">{{ unread }}</div>{{/if}}
        </div>
  </div>
</div>
