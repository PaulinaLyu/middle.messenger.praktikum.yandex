<div class="profile-page">
    {{> Modal title="Загрузите файл" modalClassName='profile-page__modal' btnText='Поменять'}}
    <div class="profile-page__sidebar">
        {{#> Button page="chat" circle=true }}
            <img src='../../../static/icons/arrow-left.svg' page="chat"><img>
        {{/ Button }}
    </div>
    <div class="profile-page__main">
        <div class="profile-page__main__container">
            <div class="profile-page__main__avatar">
                <img width="40px" height="40px"src={{#if avatar}}{{ avatar }}{{else }}'../../../static/icons/img.svg'{{/if}}><img>
            </div>
        <div><span class="profile-page__main__name-text">{{ name }}</span></div>
        <div class="profile-page__main__body">
            {{#if isChangePass}}
                {{> ProfileItem label="Старый пароль" value=email }}
                {{> ProfileItem label="Новый пароль" value=email }}
                {{> ProfileItem label="Повторите новый пароль" value=email }}
            {{else}}
                {{> ProfileItem label="Почта" value=email }}
                {{> ProfileItem label="Логин" value=login }}
                {{> ProfileItem label="Имя" value=name }}
                {{> ProfileItem label="Фамилия" value=first_name }}
                {{> ProfileItem label="Имя в чате" value=display_name }}
                {{> ProfileItem label="Телефон" value=phone }}
            {{/if}}
        </div>
        <div class="profile-page__footer">
            <div class="profile-page__footer__item">
                {{#> Button ghost='true' }}
                    <span>Изменить данные</span>
                {{/ Button }}
            </div>
            <div class="profile-page__footer__item">
                {{#> Button ghost='true' }}
                    <span page="profile-change-pass" >Изменить пароль</span>
                {{/ Button }}
            </div>
            <div class="profile-page__footer__item">
                {{#> Button ghost='true' warning='true' className='profile-page__footer__btn--warning' }}
                    <span page="chat">Выйти</span>
                {{/ Button }}
            </div>
        </div>
        </div>
    </div>
</div>